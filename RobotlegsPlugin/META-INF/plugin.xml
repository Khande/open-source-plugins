<idea-plugin url="https://github.com/johnlindquist/open-source-plugins/RobotlegsPlugin" version="2"
             xmlns:xi="http://www.w3.org/2001/XInclude">
    <name>Robotlegs</name>
    <description><![CDATA[
    Adds various features to support Robotlegs. While in beta, log bugs here:
        https://github.com/johnlindquist/open-source-plugins/issues
    ]]>
    </description>
    <change-notes><![CDATA[
        <html>
        <dl>
            <dt>0.2 Fixed bugs from real-world user-testing (handling conditionals, multiple args, etc)</dt>
            <dt>0.1 Initial Beta Release: Browse your project for mapped classes and inject a class with
                right-click.</dt>
        </dl>
        </html>
        ]]></change-notes>
    <version>0.2</version>
    <category>ActionScript</category>
    <vendor url="http://johnlindquist.com" email="johnlindquist@gmail.com">johnlindquist</vendor>


    <depends>JavaScript</depends>
    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Robotlegs" anchor="bottom" icon="/icons/Robotlegs16x16.gif"
                    factoryClass="org.robotlegs.toolwindows.BrowserToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="ToggleToMappedClass" class="actions.ToggleToMappedClassAction" text="ToggleToMappedClassAction"
                description="Toggle to a Class mapped in a Context">
            <add-to-group group-id="WebOpenInActionGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt 6"/>
        </action>
    </actions>
</idea-plugin>